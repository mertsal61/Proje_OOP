@model  Proje_OOP.Entity.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Güncelleme Sayfası</h1>

<form method="post">
    @Html.Label("Ürün ID")
    @Html.TextAreaFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextAreaFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Stok Sayısı")
    @Html.TextAreaFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">GÜNCELLE</button>
</form>
      