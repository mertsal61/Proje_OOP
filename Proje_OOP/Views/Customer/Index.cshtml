@using Proje_OOP.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                    <td><a href="/Customer/UpdateCustomer/@item.ID"class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Customer/DeleteCustomer/@item.ID"class="btn btn-danger">SİL</a></td>
                </tr>
            }
    </table>
<a href="/Customer/AddCustomer/"class="btn btn-primary">Yeni Müşteri Girişi</a>

