@model Proje_OOP.Entity.Customer
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşetiri Güncelleme Sayfası</h1>

<form method="post">
    @Html.Label("Müşteri ID")
    @Html.TextAreaFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Adı")
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Şehri")
    @Html.TextAreaFor(x => x.City, new { @class = "form-control" })
    <br />
    <button class="=btn btn-success">Güncelle</button>



</form>

